{
    "name": "BurpProxy",
    "version": "1.0",
    "description": "Google Chrome Extension with Burp Suite proxy configuration.",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "clipboardWrite",
      "webNavigation",
      "privacy",
      "notifications",
      "webRequest",
      "scripting",
      "offscreen",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "proxy"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_title": "Toggle Proxy"
    },
    "commands": {
      "toggle-proxy": {
        "suggested_key": { "default": "Alt+Shift+P" },
        "description": "Toggle proxy on/off"
      }
    },
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "icons": {
      "16": "images/Img16.png",
      "32": "images/Img32.png",
      "48": "images/Img48.png",
      "128": "images/Img128.png"
    }
  }
  